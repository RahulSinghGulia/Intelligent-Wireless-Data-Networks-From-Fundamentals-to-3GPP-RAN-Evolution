    <script>
        // --- Calculator Logic ---
        const speedInput = document.getElementById('speed');
        const frequencyInput = document.getElementById('frequency');
        const wavelengthInput = document.getElementById('wavelength');
        const calculateBtn = document.getElementById('calculateBtn');
        const clearBtn = document.getElementById('clearBtn');
        const resultDiv = document.getElementById('result');

        const SPEED_OF_LIGHT = 3e8; // Approximate speed of light in m/s

        function calculateWaveProperties() {
            const v = parseFloat(speedInput.value);
            const f = parseFloat(frequencyInput.value);
            const l = parseFloat(wavelengthInput.value);

            let calculatedValue;
            let unit;
            let propertyName;

            // Check how many inputs are provided
            const inputsProvided = [v, f, l].filter(val => !isNaN(val)).length;

            if (inputsProvided !== 2) {
                resultDiv.textContent = 'Please enter exactly two values to calculate the third.';
                resultDiv.classList.remove('hidden');
                resultDiv.classList.remove('bg-blue-50', 'text-blue-800');
                resultDiv.classList.add('bg-red-100', 'text-red-800');
                return;
            }

            resultDiv.classList.remove('bg-red-100', 'text-red-800');
            resultDiv.classList.add('bg-blue-50', 'text-blue-800');

            if (isNaN(v) && !isNaN(f) && !isNaN(l)) {
                // Calculate Speed (v = f * lambda)
                calculatedValue = f * l;
                propertyName = 'Wave Speed ($v$)';
                unit = 'm/s';
            } else if (isNaN(f) && !isNaN(v) && !isNaN(l)) {
                // Calculate Frequency (f = v / lambda)
                if (l === 0) {
                    resultDiv.textContent = 'Wavelength cannot be zero for frequency calculation.';
                    resultDiv.classList.remove('hidden');
                    resultDiv.classList.remove('bg-blue-50', 'text-blue-800');
                    resultDiv.classList.add('bg-red-100', 'text-red-800');
                    return;
                }
                calculatedValue = v / l;
                propertyName = 'Frequency ($f$)';
                unit = 'Hz';
            } else if (isNaN(l) && !isNaN(v) && !isNaN(f)) {
                // Calculate Wavelength (lambda = v / f)
                if (f === 0) {
                    resultDiv.textContent = 'Frequency cannot be zero for wavelength calculation.';
                    resultDiv.classList.remove('hidden');
                    resultDiv.classList.remove('bg-blue-50', 'text-blue-800');
                    resultDiv.classList.add('bg-red-100', 'text-red-800');
                    return;
                }
                calculatedValue = v / f;
                propertyName = 'Wavelength ($\lambda$)';
                unit = 'm';
            } else {
                resultDiv.textContent = 'Please provide valid numeric inputs for two fields.';
                resultDiv.classList.remove('hidden');
                resultDiv.classList.remove('bg-blue-50', 'text-blue-800');
                resultDiv.classList.add('bg-red-100', 'text-red-800');
                return;
            }

            resultDiv.textContent = `${propertyName}: ${calculatedValue.toPrecision(4)} ${unit}`;
            resultDiv.classList.remove('hidden');
        }

        function clearInputs() {
            speedInput.value = '';
            frequencyInput.value = '';
            wavelengthInput.value = '';
            resultDiv.classList.add('hidden');
            resultDiv.classList.remove('bg-red-100', 'text-red-800'); // Reset color
        }

        calculateBtn.addEventListener('click', calculateWaveProperties);
        clearBtn.addEventListener('click', clearInputs);

        // Optional: Allow pressing Enter in input fields to trigger calculation
        speedInput.addEventListener('keypress', (e) => { if (e.key === 'Enter') calculateWaveProperties(); });
        frequencyInput.addEventListener('keypress', (e) => { if (e.key === 'Enter') calculateWaveProperties(); });
        wavelengthInput.addEventListener('keypress', (e) => { if (e.key === 'Enter') calculateWaveProperties(); });

        // --- Wave Plotting Logic ---
        const waveCanvas = document.getElementById('wavePlot');
        const waveCtx = waveCanvas.getContext('2d');
        const plotFrequencySlider = document.getElementById('plotFrequency');
        const plotFrequencyValue = document.getElementById('plotFrequencyValue');

        const WAVE_SPEED_FOR_PLOT = 100; // Arbitrary constant speed for visualization
        const AMPLITUDE = 50;
        const X_OFFSET = 50; // Offset from left edge for drawing
        const Y_OFFSET = waveCanvas.height / 2; // Center Y-axis

        function drawWave() {
            waveCtx.clearRect(0, 0, waveCanvas.width, waveCanvas.height); // Clear canvas

            const frequency = parseFloat(plotFrequencySlider.value);
            const wavelength = WAVE_SPEED_FOR_PLOT / frequency; // Calculate wavelength based on constant speed

            plotFrequencyValue.textContent = `${frequency} Hz`;

            waveCtx.beginPath();
            waveCtx.strokeStyle = '#3b82f6'; // Blue color for the wave
            waveCtx.lineWidth = 2;

            // Draw the sine wave
            for (let x = 0; x < waveCanvas.width; x++) {
                const angle = (x - X_OFFSET) / wavelength * (2 * Math.PI); // Calculate angle based on wavelength
                const y = Y_OFFSET - AMPLITUDE * Math.sin(angle); // Sine wave formula
                if (x === 0) {
                    waveCtx.moveTo(x, y);
                } else {
                    waveCtx.lineTo(x, y);
                }
            }
            waveCtx.stroke();

            // Draw X-axis
            waveCtx.beginPath();
            waveCtx.strokeStyle = '#64748b'; // Slate-500 for axis
            waveCtx.lineWidth = 1;
            waveCtx.moveTo(0, Y_OFFSET);
            waveCtx.lineTo(waveCanvas.width, Y_OFFSET);
            waveCtx.stroke();

            // Draw labels for wavelength and frequency
            waveCtx.fillStyle = '#1e3a8a'; // Indigo-800 for text
            waveCtx.font = '14px Inter';
            waveCtx.textAlign = 'center';

            // Wavelength label
            if (wavelength > 0 && wavelength * 2 < waveCanvas.width - X_OFFSET) { // Ensure at least one full wavelength fits
                const startX = X_OFFSET;
                const endX = X_OFFSET + wavelength;
                waveCtx.fillText(`Î» = ${wavelength.toFixed(1)} m`, startX + (endX - startX) / 2, Y_OFFSET + AMPLITUDE + 20);
                
                // Draw arrows for wavelength
                waveCtx.beginPath();
                waveCtx.moveTo(startX, Y_OFFSET + AMPLITUDE + 5);
                waveCtx.lineTo(startX, Y_OFFSET + AMPLITUDE + 15);
                waveCtx.moveTo(endX, Y_OFFSET + AMPLITUDE + 5);
                waveCtx.lineTo(endX, Y_OFFSET + AMPLITUDE + 15);
                waveCtx.moveTo(startX, Y_OFFSET + AMPLITUDE + 10);
                waveCtx.lineTo(endX, Y_OFFSET + AMPLITUDE + 10);
                waveCtx.strokeStyle = '#1e3a8a';
                waveCtx.stroke();
            }

            // Frequency is represented by how many cycles fit in the visible range
            waveCtx.textAlign = 'left';
            waveCtx.fillText(`Frequency: ${frequency} Hz`, 10, 20);
            waveCtx.fillText(`Wavelength: ${(WAVE_SPEED_FOR_PLOT / frequency).toFixed(2)} m`, 10, 40);
            waveCtx.fillText(`Speed: ${WAVE_SPEED_FOR_PLOT} m/s (constant)`, 10, 60);
        }

        plotFrequencySlider.addEventListener('input', drawWave);

        // Initial draw when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            drawWave(); // Draw the initial wave plot
        });
    </script>
</body>
</html>
